#!/bin/env raku

use Proc::Easier;
use FontConverter;

if not @*ARGS.elems {
    print qq:to/HERE/;
    Usage: {$*PROGRAM.basename} <font file to convert, with suffix>

    Converts fonts between PostScript and TrueType or OpenType formats:

      X.pfb => X.ttf
      X.ttf => X.t1a and X.afm
      X.otf => X.t1a and X.afm

    HERE
}

my @args = @*ARGS;
my $o    = FontConverter.new;
$o.run-program: @args;
